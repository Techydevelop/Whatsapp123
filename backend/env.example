# ===========================================
# BACKEND ENVIRONMENT VARIABLES (.env)
# ===========================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# GoHighLevel OAuth Configuration
GHL_CLIENT_ID=your_ghl_marketplace_client_id_here
GHL_CLIENT_SECRET=your_ghl_marketplace_client_secret_here
GHL_REDIRECT_URI=http://localhost:3000/oauth/callback

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# JWT Secret for Authentication (IMPORTANT: Keep this SECRET!)
JWT_SECRET=supersecretkey12345678901234567890

# ===========================================
# FRONTEND ENVIRONMENT VARIABLES (frontend/.env.local)
# ===========================================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# Supabase Configuration (same as backend)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

