{
  "name": "WhatsApp SMS Provider",
  "description": "Connect WhatsApp as SMS provider for GoHighLevel",
  "version": "1.0.0",
  "author": "WhatsApp SaaS",
  "category": "Communication",
  "icon": "https://whatsapp123-dhn1.onrender.com/ghl/provider/icon",
  "screenshots": [
    "https://whatsapp123-dhn1.onrender.com/ghl/provider/screenshot1",
    "https://whatsapp123-dhn1.onrender.com/ghl/provider/screenshot2"
  ],
  "provider": {
    "type": "sms",
    "name": "WhatsApp SMS",
    "description": "Send and receive SMS via WhatsApp",
    "capabilities": ["send", "receive", "status"],
    "webhook_url": "https://whatsapp123-dhn1.onrender.com/ghl/provider/webhook",
    "config_url": "https://whatsapp123-dhn1.onrender.com/ghl/provider/config"
  },
  "settings": {
    "webhook_url": {
      "type": "url",
      "label": "Webhook URL",
      "description": "URL for receiving incoming messages",
      "required": true,
      "default": "https://whatsapp123-dhn1.onrender.com/ghl/provider/webhook"
    },
    "location_id": {
      "type": "text",
      "label": "Location ID",
      "description": "GHL Location ID for this provider",
      "required": true
    }
  },
  "endpoints": {
    "send": "https://whatsapp123-dhn1.onrender.com/ghl/provider/send",
    "receive": "https://whatsapp123-dhn1.onrender.com/ghl/provider/webhook",
    "status": "https://whatsapp123-dhn1.onrender.com/ghl/provider/status"
  },
  "permissions": [
    "conversations.write",
    "conversations.readonly",
    "conversations/message.write",
    "conversations/message.readonly",
    "contacts.readonly",
    "contacts.write",
    "businesses.readonly",
    "users.readonly"
  ]
}
